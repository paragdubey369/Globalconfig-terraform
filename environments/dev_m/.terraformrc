- export TF_CLI_CONFIG_FILE="$ENV_DIR/terraform.rc"
- |
  cat > "$TF_CLI_CONFIG_FILE" <<'RC'
  provider_installation {
    filesystem_mirror {
      path    = "terraform-providers"
      include = ["registry.terraform.io/*/*"]
    }
    direct {
      exclude = ["registry.terraform.io/*/*"]   # block internet
    }
  }
RC
